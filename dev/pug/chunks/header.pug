            input(type="text" placeholder="Search").search__input
            button(type="submit").search__button.flex.flex_content-end.flex_align-center
                i.icon.bg-search
        .header__right.flex.flex_align-center
            a(href="/").header__home
                i.icon.bg-home
            a(href="/").header__like
                i.icon.bg-like
